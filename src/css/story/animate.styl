.drag
  margin 0 auto
  max-width $column-width
  font-weight 600
  text-align left
  display flex
  flex-direction column

  &-sentences
    position relative
    height 5rem
    order 1
    width 100%
    margin 0 auto
    max-width 50rem
    //min-width 20rem

  .click-sentence
    opacity 0
    position absolute
    transition 300ms
    padding 0 1rem
    width 100%
    set-type-size('small', true)
    font-weight 300
    color $mid-denim
    margin 0 auto
    text-align center

    &.is-visible
      opacity 1
      transition 300ms

  .stat-sentence
    opacity 0
    margin 0 auto
    position absolute
    transition 300ms
    padding 0 1rem
    line-height 1
    text-align center
    width 100%
    set-type-size('medium')
    +mq('bp-4')
      line-height 1.5

    .stat-women
      background-color $tag-red
      padding 0.125rem 0.25rem
      color $bg-denim
      //border 1px dashed $gold-stitch
      set-type-size('medium', true)
    .stat-men
      background-color $gold-stitch
      padding 0.125rem 0.25rem
      color $bg-denim
      //border 1px dashed $gold-stitch
      set-type-size('medium', true)

    &.is-visible
      opacity 1
      transition 300ms

  &-animation
    display flex
    flex-direction row-reverse
    order 0
    margin auto

    .animate-chart
      // max-width 200px
      // height 200px

      .avglabel
        text-transform uppercase
        font-weight 300

      .outline
        stroke-width 2px
        stroke-dasharray 5,5

        &-women
          stroke $tag-red
          fill rgba($tag-red, 0.3)

        &-men
          stroke $gold-stitch
          fill rgba($gold-stitch, 0.3)

      .largestRect
        fill rgba($dark-denim, .2)
        stroke $dark-denim
        stroke-width 1px
        stroke-dasharray 5,5

nav
  overflow hidden
  max-width $column-width
  margin 0 auto
  position sticky
  &:after
    position absolute
    bottom 0
    display block
    content ''
    width 100%
    height 100%
    z-index 100
    pointer-events none
    right -80%
    background linear-gradient(to right, rgba($bg-denim,0) 0%,rgba($bg-denim,1) 50%,rgba($bg-denim,1) 100%)
    +mq('bp-4')
    	right -70%
    &:before
      position absolute
      bottom 0
      display block
      content ''
      width 100%
      height 100%
      z-index 100
      pointer-events none
      left -80%
      +mq('bp-4')
      	right -50%
        background linear-gradient(to left, rgba($bg,0) 0%,rgba($bg,1) 50%,rgba($bg,1) 100%)
  ul
    display flex
    flex-direction row
    height 8rem
    li
      display flex
      flex-direction column
      width 8rem
      padding 0.5rem 0.25rem
      height auto
      align-items: center
      //margin 0 0.25rem
      background-color $bg-denim
      border 1px solid $bg-denim
      transition 300ms

      &.is-active
        background-color rgba($light-denim, .4)
        border 1px dashed $dark-denim
        transition 300ms

      .image
        //position absolute
        // top 0
        // left 50%
        margin 0 auto
        width auto
        max-height 3rem
        // background-position center
        // background-repeat no-repeat
        // background-size 5rem auto
        // transform translate(-50%, 0)
      .object-name
        text-align: center
        set-type-size('small', true)

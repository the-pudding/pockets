.fit

  .toggle-table
    text-align center
    margin-top 1rem
    .btn
      background-color transparent
      color $fg
      border 1px solid $fg
      padding 0.25em 0.5em
      width 7rem
      text-transform uppercase
      font-weight 600
      transition background-color 250ms
      &:hover
      	background-color rgba($mid-denim, 0.2)

  .show-more
    position absolute
    width 100%
    height 5rem
    background linear-gradient(rgba($bg-denim, 0), $bg-denim)
    bottom 0
    visibility hidden
    pointer-events none
    &.is-visible
    	visibility visible
  &-container
    max-width 1020px
    margin 0 auto

  figure
    min-height 320px
    position relative
    &.is-truncated
      max-height 46rem
      overflow hidden



  .fit-table
    display flex
    flex-direction row

    .chart
      display flex
      flex-direction column
      margin 0 10px

      .text-menWomen
        text-transform: uppercase;
        font-weight 600

      .container
        display flex
        flex-wrap wrap
        +mq('bp-6')
          min-width 490px


        .fit-brand
          width 225px
          height 325px
          margin 10px 10px 10px 0
          display none

          &.visible
            display block

          &.men
            .tag
              background-color $gold-stitch
              color $bg-denim
              padding 0.5rem
              text-transform uppercase
              font-weight 600

          &.women
            .tag
              background-color $tag-red
              color $bg-denim
              padding 0.5rem
              text-transform uppercase
              font-weight 600

          .text
            display flex

          .leftText
            justify-content space-between

          .rightText
            justify-content space-between
            margin-top 0.5rem

          .tooltip
            background-color: $mid-denim
            position absolute
            width 225px
            height 325px
            opacity 0
            transition 300ms
            display flex
            align-items: center
            justify-content: center

            &-text
              display flex
              flex-direction column
              text
                color $white
                margin 1rem
                text-align: center
            &:hover
              opacity 0.9
              transition 300ms

          .display
            display flex
            flex-direction column
            border 1px solid $dark-denim
            position absolute
            width 225px
            height 325px


            &.dimmed
              opacity 0.2

            .text
              order 0
              margin 0.75rem 0 1.5rem 0
              justify-content space-between

              .brand
                margin 0 0 0 0.75rem
                text-transform: uppercase;
                font-weight 600
                display block

              .style
                margin 0 0 0 0.75rem
                set-type-size('small', true)
                display block

            svg
              order 1

              .outline
                stroke $dark-denim
                stroke-width 1px
                fill rgba($light-denim, .2)
                stroke-dasharray 5,5

              .largestRect
                fill rgba($dark-denim, .2)
                stroke $dark-denim
                stroke-width 1px
                stroke-dasharray 5,5

              .measure
                fill $mid-denim
                set-type-size('x-small')

<section class='fit'>
  <h2 class='section-hed tk-atlas'>{{copy.fit-title}}</h2>
  {{#each copy.fit-text}}
    <p class='prose'>{{{value}}}</p>
  {{/each}}

  <div class='drag'>
    <div class='drag-sentences'>
      <p class='click-sentence tk-atlas is-visible'>{{copy.test-fit}}</p>
      <p class='stat-sentence tk-atlas'><span class='stat-women'></span> of women's front pockets and <span class='stat-men'></span> of men's front pockets can fit this item.</p>
    </div>
    <div class='drag-animation'></div>
  </div>
  {{> story/nav }}

  <div class='fit-container'>
    <div class='ui'>
      <select class='ui-style tk-atlas' data-dropdown='style'></select>
      <select class='ui-brand tk-atlas' data-dropdown='brand'></select>
      <select class='ui-price tk-atlas' data-dropdown='price'></select>
    </div>
    <figure class='is-truncated'>
      <div class='fit-table'>
      </div>
      <div class='show-more is-visible'></div>
    </figure>
    <div class='toggle-table'><button class='btn x-small'>Show All</button></div>
  </div>
</section>
